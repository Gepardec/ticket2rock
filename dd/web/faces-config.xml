<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE faces-config 
PUBLIC "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
                            "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">
<faces-config>

	<navigation-rule>
		<from-view-id>/bandlist.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>bandform</from-outcome>
            <to-view-id>/band.xhtml</to-view-id>
        </navigation-case>	
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/home.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>bandform</from-outcome>
            <to-view-id>/band.xhtml</to-view-id>
        </navigation-case>	
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/band.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>bandlist</from-outcome>
            <to-view-id>/bandlist.xhtml</to-view-id>
        </navigation-case>	
	</navigation-rule>
		
   <!-- Facelets support -->
   <application>
	 <view-handler>com.sun.facelets.FaceletViewHandler</view-handler>	 
     <locale-config>
       <default-locale>de</default-locale>
       <supported-locale>de</supported-locale>
       <supported-locale>en_US</supported-locale>
     </locale-config>
    <message-bundle>de.ejb3buch.ticket2rock.applikation.resources.Message</message-bundle>  
   </application>
	

  <managed-bean>
    <description>
      Controller Bean fuer Ticket2Rock
    </description>
    <managed-bean-name>T2RManagerBean</managed-bean-name>
    <managed-bean-class>de.ejb3buch.ticket2rock.applikation.controller.T2RController</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
		
	
</faces-config>
